!!!html5
%html
  %body
    %h1 File Uploader
    %form{:action => "./upload", :method => "post", :enctype => "multipart/form-data"}
      %input{:type => "file", :name => "file"}
      %input{:type => "submit", :name => "submit"}
      - @list.each do |file|
        %ul
          %li
            %a{:href => '/download/'+file}= file
            %a{:href => '/delete/'+file} delete
